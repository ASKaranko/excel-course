 {
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "arrow-parens": "off",
    "indent": [
      "error",
      "tab"
    ],
    "comma-dangle": "off",
    "linebreak-style": [
      "error",
      "windows"
    ],
    "require-jsdoc": "off",
    "quotes": "off",
    "no-tabs": [
      "error",
      { "allowIndentationTabs": true }
    ]
  },
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "google"]
}